<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Inherit from the Material Theme (We will be using the toolbar so no need to show ActionBar) -->
	<style
		name="Theme.Producer"
		parent="Theme.AppCompat.NoActionBar">
		<item
			name="colorPrimary">@color/primary</item>
		<item
			name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item
			name="colorAccent">@color/accent</item>
		<item
			name="android:textColorPrimary">@color/primary_text</item>
		<item
			name="colorButtonNormal">@color/primary</item>
		<item
			name="android:navigationBarColor">@color/navigationBarColor</item>
		<item
			name="colorControlNormal">@color/colorControlNormal</item>
		<item
			name="windowActionModeOverlay">true</item>
		<item
			name="android:actionModeBackground">@color/bg_action_mode</item>
		<!-- enable window content transitions -->
		<item
			name="android:windowContentTransitions">true</item>
	</style>
	<!-- Toolbar theme -->
	<!--<style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
    <item name="colorPrimary">?attr/tierHighlightColor</item>
    <item name="colorPrimaryDark">?attr/tierHighlightColor</item>
  </style>-->
	<!-- TabLayout style -->
	<style
		name="CustomTabLayout"
		parent="Widget.Design.TabLayout">
		<item
			name="android:layout_width">match_parent</item>
		<item
			name="android:layout_height">@dimen/tab_min_height</item>
		<item
			name="tabIndicatorColor">@color/colorControlNormal</item>
		<item
			name="android:layout_alignParentBottom">true</item>
		<item
			name="tabMode">fixed</item>
		<item
			name="tabGravity">fill</item>
	</style>
</resources>