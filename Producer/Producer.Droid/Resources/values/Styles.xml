<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Inherit from the Material Theme (We will be using the toolbar so no need to show ActionBar) -->
	<style
		name="Theme.Producer"
		parent="Theme.AppCompat.NoActionBar">
		<item
			name="colorPrimary">@color/colorPrimary</item>
		<item
			name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item
			name="colorAccent">@color/colorAccent</item>
		<item
			name="android:textColorPrimary">@color/primaryText</item>
		<item
			name="android:textColorSecondary">@color/primaryLight</item>
		<item
			name="colorButtonNormal">@color/colorPrimary</item>
		<item
			name="android:navigationBarColor">@color/navigationBarColor</item>
		<item
			name="colorControlNormal">@color/colorControlNormal</item>
		<item
			name="windowActionModeOverlay">true</item>
		<item
			name="android:actionModeBackground">@color/bg_action_mode</item>
		<item
			name="actionMenuTextColor">@android:color/white</item>
		<!-- enable window content transitions -->
		<item
			name="android:windowContentTransitions">true</item>
	</style>
	<!-- Toolbar theme -->
	<style
		name="ToolbarTheme"
		parent="Widget.AppCompat.Toolbar">
		<!-- android:textColorPrimary is the  color of the title text in the Toolbar, in the Theme.AppCompat theme:  -->
		<item
			name="android:textColorPrimary">@color/primaryText</item>
		<!-- actionMenuTextColor is the color of the text of
	        action (menu) items in the Toolbar, at least in the
	        Theme.AppCompat theme.
	        For some reason, they already get the textColorPrimary
	        when running on API 21, but not on older versions of
	        Android, so this is only necessary to support older
	        Android versions.-->
		<item
			name="actionMenuTextColor">@color/colorAccent</item>
		<!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
		<item
			name="android:textColorSecondary">@color/colorAccent</item>
	</style>
	<!-- TabLayout style -->
	<style
		name="CustomTabLayout"
		parent="Widget.Design.TabLayout">
		<item
			name="android:layout_width">match_parent</item>
		<item
			name="android:layout_height">@dimen/tab_height</item>
		<item
			name="tabIndicatorColor">@color/colorAccent</item>
		<item
			name="android:layout_alignParentBottom">true</item>
		<item
			name="tabMode">fixed</item>
		<item
			name="tabGravity">fill</item>
	</style>
</resources>